<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>YadaritP</defName> 
		<hediffClass>HediffWithComps</hediffClass> 
		<defaultLabelColor>(0.5, 1.0, 0.3)</defaultLabelColor> 
		<label>Yadarit buildup</label> 
		<labelNoun>a Yadarit buildup</labelNoun>
		<description>Immersed in a dream</description>
		<minSeverity>0</minSeverity>
		<maxSeverity>1</maxSeverity>
		<lethalSeverity>1</lethalSeverity>
		<makesSickThought>true</makesSickThought>
		<scenarioCanAdd>false</scenarioCanAdd>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>-0.9</severityPerDayNotImmune> 
			</li>
			<li Class="SK.HediffCompProperties_FleshOnly"/>
		</comps>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<label>initial</label>
				<painOffset>0.3</painOffset>
				<vomitMtbDays>0.1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.3</minSeverity>
				<label>advanced</label>
				<painOffset>0.3</painOffset>
				<vomitMtbDays>0.05</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.4</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.4</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.6</minSeverity>
				<label>near death</label>
				<vomitMtbDays>0.01</vomitMtbDays>
				<painOffset>0.3</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.6</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.6</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.6</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>dead</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	
</Defs>