<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingCategoryDef>
		<defName>AmmoBalls</defName>
		<label>Balls</label>
		<parent>AmmoNeolithic</parent>
		<iconPath>UI/Icons/ThingCategories/Ball</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_Balls</defName>
		<label>Balls</label>
		<ammoTypes>
			<Ammo_Balls>Balls</Ammo_Balls>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="SmallAmmoBase">
		<defName>Ammo_Balls</defName>
		<label>Balls</label>
		<description>The Balls.</description>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_FueledSmithy</li>
			<li>CE_AutoEnableCrafting_ElectricSmithy</li>
		</tradeTags>
		<thingCategories>
			<li>AmmoBalls</li>
		</thingCategories>
		<graphicData>
			<texPath>Things/Projectile/Balls/Balls</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.5</MarketValue>
			<Mass>0.012</Mass>
			<Bulk>0.01</Bulk>
		</statBases>
		<ammoClass>FullMetalJacket</ammoClass>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="BaseBalls" ParentName="SK_BaseBullet" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Balls/Balls</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>38</speed>
			<dropsCasings>false</dropsCasings>
		</projectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseBalls">
		<defName>Balls</defName>
		<label>Balls</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>5</damageAmountBase>
			<!-- <armorPenetrationBase>0.15</armorPenetrationBase> -->
			<armorPenetrationBlunt>2</armorPenetrationBlunt>
			<armorPenetrationSharp>2.9</armorPenetrationSharp>
		</projectile>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="AmmoRecipeNeolithicBase">
		<defName>MakeAmmo_Balls</defName>
		<label>make Balls x100</label>
		<description>Craft 100 Balls.</description>
		<jobString>Making poison Balls.</jobString>
		<workAmount>500</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workSkill>Crafting</workSkill>
		<targetCountAdjustment>50</targetCountAdjustment>
		<recipeUsers>
			<li>CraftingSpot</li>
		</recipeUsers>
		<skillRequirements>
			<Medicine>2</Medicine>
			<Crafting>3</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Metallic</li>
					</categories>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Metallic</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<Ammo_Balls>100</Ammo_Balls>
		</products>
	</RecipeDef>

</Defs>
