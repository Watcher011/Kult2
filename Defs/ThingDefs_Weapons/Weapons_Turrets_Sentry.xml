<Defs>

	<!-- ================ Improvised turret gun ============== -->

	<ThingDef ParentName="BaseAutoTurretGun">
		<defName>Gun_MiniTurretA</defName>
		<label>9x39mm gun</label>
		<graphicData>
			<texPath>Things/Building/Security/TurretImprovised1_Top</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<!-- <menuHidden>True</menuHidden> -->
		<description>-------------</description>
		<soundInteract>Interact_Rifle</soundInteract>
		<tradeability>None</tradeability>
		<statBases>
			<SightsEfficiency>1.45</SightsEfficiency>
			<ShotSpread>0.03</ShotSpread>
			<SwayFactor>0.20</SwayFactor>
			<RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
			<DeteriorationRate>0.2</DeteriorationRate>
		</statBases>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">

				<recoilAmount>0.21</recoilAmount>
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_9x39mmSoviet_SH</defaultProjectile>
				<warmupTime>0.30</warmupTime>
				<range>30</range>
				<ticksBetweenBurstShots>8</ticksBetweenBurstShots>
				<burstShotCount>5</burstShotCount>
				<soundCast>GunShotA</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>200</magazineSize>
				<reloadTime>10.00</reloadTime>
				<!-- <spawnUnloaded>false</spawnUnloaded> -->
				<ammoSet>AmmoSet_9x39mmSoviet</ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aimedBurstShotCount>15</aimedBurstShotCount>
				<aiUseBurstMode>FALSE</aiUseBurstMode>
				<aiAimMode>Snapshot</aiAimMode>
				<noSnapshot>true</noSnapshot>
				<noSingleShot>true</noSingleShot>
			</li>
		</comps>
	</ThingDef>


 
